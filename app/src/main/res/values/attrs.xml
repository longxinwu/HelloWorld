<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--带清除按钮的EditText-->
    <declare-styleable name="overrideEditText">
        <!-- 清除按钮显示模式 -->
        <attr name="clearBtnMode">
            <!--不显示清空按钮-->
            <enum name="never" value="0" />
            <!--不为空，且在编辑状态时（及获得焦点）显示清空按钮-->
            <enum name="whileEditing" value="1" />
        </attr>
        <attr name="clearButtonDraw" format="reference"/>
    </declare-styleable>

    <!--带清除按钮的EditText-->
    <declare-styleable name="UpEditText">
        <!-- 清除按钮显示模式 -->
        <attr name="clearDrawMode">
            <!--不显示清空按钮-->
            <enum name="never" value="0" />
            <!--不为空，且在编辑状态时（及获得焦点）显示清空按钮-->
            <enum name="whileEditing" value="1" />
        </attr>
    </declare-styleable>
</resources>
